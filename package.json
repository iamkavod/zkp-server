{
  "name": "zkp-server",
  "version": "1.0.0",
  "description": "Standalone ZK Proof generation server",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && node -e \"require('fs').cpSync('circuits', 'dist/circuits', {recursive: true})\"",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "postinstall": "pnpm build"
  },
  "dependencies": {
    "circomlibjs": "^0.1.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ffjavascript": "^0.3.0",
    "snarkjs": "^0.7.5"
  },
  "devDependencies": {
    "@types/circomlibjs": "^0.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/snarkjs": "^0.7.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
